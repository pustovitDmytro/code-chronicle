{
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "12.2"
          },
          "modules": false
        }
      ]
    ],
    "plugins": [
      "shebang",
      [
        "@babel/plugin-proposal-decorators",
        {
           "legacy": true
        }
      ],
      [
        "module-resolver",
        {
          "alias": {
            "tests": "./tests",
            "src": "./src/",
            "package": "./package.json"
          }
        }
      ],
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-optional-chaining"
    ],
    "ignore": [
      "node_modules"
    ]
  }
  